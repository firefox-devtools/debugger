#!/usr/bin/env bash

DOWNLOADS_PATH=${DOWNLOADS_PATH:-"$HOME/downloads"}

mkdir -p $DOWNLOADS_PATH

# Using the first 8 chars of the Docker image hash for brevity
if [[ -e $DOWNLOADS_PATH/local-mc.tar ]]; then
  time docker load -i $DOWNLOADS_PATH/local-mc.tar;
else
  time docker pull jasonlaster11/local-mc7
  docker images
  time docker save jasonlaster11/local-mc7 > $DOWNLOADS_PATH/local-mc.tar
fi
