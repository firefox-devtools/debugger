#!/usr/bin/env bash

wget -O firefox.tar.bz2 https://download.mozilla.org/?product=firefox-nightly-latest&os=linux&lang=en-US
tar -xjf firefox.tar.bz2
sudo rm -rf  /opt/firefox-nightly
mkdir /opt/firefox-nightly
sudo rm  /usr/bin/firefox
sudo mv firefox /opt/firefox-nightly
sudo ln -s /opt/firefox-nightly/firefox /usr/bin/firefox
